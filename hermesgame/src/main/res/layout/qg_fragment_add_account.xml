<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/layout_find_password"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    skin:enable="true"
    android:background="@drawable/qg_fragment_base_bg_mid"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/qg_add_account_title"
            android:textColor="@color/qg_black"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/qg_add_account_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="28dp"
            android:background="@drawable/qg_icon_close" />
    </RelativeLayout>
    <!-- 文字 -->


    <EditText
        android:id="@+id/qg_add_account_edit"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/qg_add_account_inputusername"
        android:textColor="#ff515151"
        android:background="@drawable/qg_add_account_editext_bg"
        android:digits="@string/input_digits"
        android:maxLength="10"
        android:maxLines="1"
        android:textSize="18sp" />
        <!-- 实名按钮 -->
        <Button
            android:id="@+id/qg_add_account_btn_confim"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="150dp"
            android:layout_height="@dimen/qg_layout_height"
            android:layout_marginTop="15dp"
            android:background="@drawable/qg_btn_selector"
            skin:enable="true"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="确定"
            android:textColor="@drawable/qg_login_button_txt_selector"
            android:textSize="16sp" />
</LinearLayout>