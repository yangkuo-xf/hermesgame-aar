<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0.5dp"
        android:paddingBottom="22.5dp"

        android:paddingLeft="22.5dp"
        android:paddingRight="22.5dp"
        android:id="@+id/toast_login_layout"
        style="@android:style/Theme.Translucent"
       >

    <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
             android:orientation="vertical"
            android:background="@drawable/qg_circular_corner_dialog">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

            <ImageView
                    android:id="@+id/qg_toast_login_success_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                   />

            <TextView
                    android:id="@+id/toast_game"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp"
                    android:singleLine="true"
                    android:ellipsize="end"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/qg_toast_user_limit"
            android:includeFontPadding="false"
            android:textColor="@color/qg_light_gray3"
            android:textSize="10sp"
            android:visibility="gone"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="您的游戏时长2小时,支付限额500元"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>