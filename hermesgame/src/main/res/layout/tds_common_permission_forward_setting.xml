<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:background="@drawable/tds_common_permission_alert_bg">

        <RelativeLayout
            android:id="@+id/rl_permission_top"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/tds_common_permission_top"
            android:paddingStart="10dp"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/tv_permission_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#333333"
                android:textSize="10dp"
                android:textStyle="bold"
                tools:text="申请权限" />

            <ImageView
                android:id="@+id/iv_permission_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/tds_common_permission_close" />

        </RelativeLayout>

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_permission_top"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/tv_permission_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="2"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textColor="#333333"
            android:textSize="12sp"
            tools:text="开启相机权限" />

        <TextView
            android:id="@+id/tv_permission_setting"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_below="@id/tv_permission_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/tds_common_permission_positive_bg"
            android:gravity="center"
            tools:text="去开启"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

    </RelativeLayout>

</FrameLayout>