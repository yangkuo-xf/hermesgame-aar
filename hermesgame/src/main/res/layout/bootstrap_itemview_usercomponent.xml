<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingLeft="12dp"
    android:paddingStart="12dp"
    android:paddingRight="12dp"
    android:paddingEnd="12dp"
    >
    <ImageView
        android:id="@+id/componentIconImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        tools:src="@drawable/tds_ic_moment"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/componentNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        tools:text="动态"
        android:layout_toRightOf="@id/componentIconImageView"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/rightArrowImageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/tds_ic_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>